{% extends 'employer-zone/base.html.twig' %}

{% block description %}
    Dashboard
{% endblock %}

{% block title %}
    Dashboard
{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block subtitle %}
    Offers
{% endblock %}

{% block body %}
    {% for requests in offers %}
        <div class="wornak-search-result--core">
            <a class="wornak-search-results--core_title"
               href="{{ path('app_joszone_job', {token: requests.jobpost.uid}) }}">
                {{ requests.title }}
            </a>
            <div class="wornak-search-result--core__body">
                <div class="wornak-search-result--core__summary">
                    <h4 class="wornak-search-result--core__company">
                        {{ requests.publishedAt|date }}
                    </h4>
                </div>
                <div class="wornak-search-result--core__details">
                    <ul class="wornak-search-result--core__details-list">
                        <li class="wornak-search-result--core__item">
                            Status: &nbsp; {{ requests.status }}</li>
                        <br>
                        <li class="wornak-search-result--core__item wornak-search-result--core__appt-type">
                            <a href="#" class="btn btn-primary">Accept</a>
                            <a href="#" class="btn btn-danger">Deny</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    {% else %}
        No Request found
    {% endfor %}
{% endblock %}

{% block javascript %}
{{ parent() }}
{% endblock %}




